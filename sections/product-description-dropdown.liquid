<div class="product-description-dropdown">
  <div class="dropdown">
    <button class="dropdown-toggle">Description <span class="chevron">▾</span></button>
    <div class="dropdown-content">
      {{ product.description }}
    </div>
  </div>

  {% for block in section.blocks %}
    <div class="dropdown">
      <button class="dropdown-toggle">{{ block.settings.title }} <span class="chevron">▾</span></button>
      <div class="dropdown-content">
        {{ block.settings.content }}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Product Dropdowns",
  "settings": [
    {
      "type": "text",
      "id": "header_text",
      "label": "Texto do Cabeçalho",
      "default": "Free delivery over $100"
    },
    {
      "type": "range",
      "id": "header_font_size",
      "label": "Tamanho da Fonte do Cabeçalho",
      "min": 10,
      "max": 36,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "header_padding_top",
      "label": "Padding Top do Cabeçalho",
      "min": 0,
      "max": 100,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "header_padding_bottom",
      "label": "Padding Bottom do Cabeçalho",
      "min": 0,
      "max": 100,
      "default": 30,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "dropdown",
      "name": "Dropdown",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Description"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Add your content here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Product"
    }
  ]
}
{% endschema %}

{% style %}
  .dropHeader {
    padding-top: {{ section.settings.header_padding_top }}px;
    padding-bottom: {{ section.settings.header_padding_bottom }}px;
  }
  
  .dropHeader__title {
    font-size: {{ section.settings.header_font_size }}px;
    font-weight: 700;
    text-align: start;
    width: 500px;
  }

{% endstyle %}

{% style %}
  .product-description-dropdown .dropdown {
    margin-top: 15px;
    padding: 0 15px;
  }
  .product-description-dropdown .dropdown-toggle {
    background-color:rgb(230, 230, 230);
    border: none;
    padding: 10px;
    width: 100%;
    text-align: left;
    font-weight: bold;
    border-radius: 10px;
    cursor: pointer;
    position: relative;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1) !important;
  }
  .product-description-dropdown .dropdown-content {
    display: none;
    /* padding: 10px; */
    margin-top: 10px;
    background-color:rgb(230, 230, 230);
    border: 1px solid #ddd;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out, padding 0.3s ease-out;
  }
  .product-description-dropdown .dropdown-toggle.active + .dropdown-content {
    display: block;
    max-height: 500px; 
    padding: 10px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1) !important;
  }
  .product-description-dropdown .chevron {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 12px;
  }
  .promo-cards {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
  }
  .promo-card {
    flex: 1;
    padding: 20px;
    background-color: #333;
    color: #fff;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .promo-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }
  .promo-card__title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .promo-card__text {
    font-size: 16px;
    color: #8A2BE2;
  }
{% endstyle %}

